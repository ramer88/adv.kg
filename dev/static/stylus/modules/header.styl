section.header
	margin-bottom 47px
	background-color headerColor
	
.header-top
	margin 0 auto
	width 100%
	background-color headerColor
	padding 16px 15px 25px
	white-space nowrap
	
.header-top-container
	display flex
	justify-content space-between
	flex-wrap wrap
	margin 0 auto
	width 100%
	max-width 1170px

.header-logo
	size(91px,64px)
	display block
	background url('../img/general/logo.png') 0 0 no-repeat
	background-size cover
		
.header-nav
	display flex
	justify-content space-between
	flex-wrap wrap
	width 695px
	margin 26px 22px 0 0
	
	li
		a
			padding-bottom 8px
			color #fff
			font-size rem(25)
			font-family mainFont
			
			&:focus,
			&:hover,
			&:visited
				border-bottom 5px solid #fff
			
	& ul.sandwich-menu-link
		display block
		order 3
		margin 10px 0 0
		width 100%
		background-color mainColor
		z-index 3
		
		li
			display block
			margin 0
			padding 0
			border-bottom 1px solid #fff
			
			a
				display block
				padding 12px 21px
				color #fff
				
				&:hover
					background-color buttonHoverColor
					color mainTextColor
					font-size rem(16)
					transition all .5s
	
/*.active-link
