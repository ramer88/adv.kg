/*Sandwich menu*/

.sandwich-menu
	order 2
	position relative
	display none
	width 41px
	height 36px
	margin 20px 0 0 30px
	background-color mainColor
	cursor pointer
	
	& span
		position absolute
		display block
		width 70%
		height 4px
		background-color #fff
		opacity 1
		transition all 0.5s
		
	& span:last-child
		margin-bottom 0
		
	.sandwich-menu-top
		top 6px
		left 6px
	.sandwich-menu-middle
		top 16px
		left 6px
	.sandwich-menu-bottom
		top 26px
		left 6px

	&.active
		.sandwich-menu-top
			opacity 0
		.sandwich-menu-middle
			top 16px
			left 6px
			transform rotate(44deg)
		.sandwich-menu-bottom
			top 16px
			left 6px
			transform rotate(-45deg)

/*Sandwich menu end*/

